<div id="square">
    <h2>Recommandations</h2>
    <div class="row">
        {% for prestataire in prestataires %}
            <div class="col-12 col-xs-6 col-md-3 col-lg-3">
                <a href='{{path('prestataire_details', {id: prestataire.id})}}'>
                    <figure>
                        <span class="nom">{{prestataire.nom}}</span>
                        {# <span class="description">{{prestataire.description}}</span> #}
                        {% include 'components/logo.html.twig' %}
                    </figure>
                </a>
            </div>
        {% endfor %}
        <div class="col-12 col-xs-6 col-md-3 col-lg-3">
                <a href='{{path('services',{id: categorieEnAvant.id})}}'>
                    <figure>
                        <span class="nom">{{categorieEnAvant.nom}}</span>
                        <span class="description">{{categorieEnAvant.description}}</span>
                        <img class='banner' src="
                        {% if (categorieEnAvant.banner) %}
                        {{asset(categorieEnAvant.banner.slugBanner)}}
                        {% else %}
                        {{asset('img/category/default.png')}}
                        {% endif %}
                        ">
                    </figure>
                </a>
            </div>
    </div>
</div>